= render partial: 'admin/header'

%article.l-cities-index
  %header
    %h1
      Города
    .new-city
      %button
        = link_to 'Создать город', new_city_path
    .export-city
      %button
        = link_to 'Експорт в цсв', admin_data_export_path(format: 'csv')

  %section.b-cities
    = render partial: 'cities/city_admin', collection: @cities, as: :city

  .l-import-cities
    %h2
      Импорт городов
    = form_tag admin_data_import_path, multipart: true do
      = file_field_tag :file
      = submit_tag 'Импорт городов'
