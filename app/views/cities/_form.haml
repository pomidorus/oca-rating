.l-form
  = form_for @city, html: {class: 'b-city-form'} do |f|
    .uk-title
      .label
        = f.label :uk_title, 'Назва'
      = f.text_field :uk_title
    .region
      = select('city', 'region_id', Region.all.collect {|r| [r.uk_name, r.id]}, :selected => @city.region_id)
    .site_link
      = f.fields_for :site do |site_fields|
        .label
          = site_fields.label :url, 'Сайт горсовета'
        = site_fields.text_field :url
    .asset_disclosure_link
      = f.fields_for :asset_disclosures do |disclosure_fields|
        .label
          = disclosure_fields.label :url, 'Финансовые декларации'
        = disclosure_fields.text_field :url
    .budget_url
      = f.fields_for :budget do |budget_fields|
        .label
          = budget_fields.label :url, 'Бюджет'
        = budget_fields.text_field :url

    .action-save
      = f.submit 'Сохранить'
